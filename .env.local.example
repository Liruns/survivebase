# SurviveBase Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================
# Supabase Configuration (Required for production)
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public URL - safe to expose in browser
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Anon Key - safe to expose, used for read operations with RLS
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# Service Role Key - KEEP SECRET, used for cron job writes
# This bypasses RLS, never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ============================================
# Cron Job Security (Required for production)
# ============================================
# Generate a random string for cron authentication
# Example: openssl rand -hex 32
CRON_SECRET=your-random-secret-here

# ============================================
# Optional Configuration
# ============================================

# Steam API Key (optional, for extended API access)
# Get your key at: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=

# Site URL (for SEO and OG images)
NEXT_PUBLIC_SITE_URL=https://survivebase.vercel.app

# Enable debug mode (optional)
DEBUG=false
